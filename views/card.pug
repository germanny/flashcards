extends layout.pug

block content
  section.namecard
    .namecard-hello
      if name
        p.namecard-greeting Welcome, #{name}!
        form.namecard-exit(action='/goodbye', method='POST')
          button(type='submit')
            img(src='/static/img/close.svg')
  section.flashcards
    .card.card-question
      .card-header
      h1.card-title Question
      #content
        h2= text
        if hint
          p#hint
            i Hint: #{hint}
      .card-flip-wrap
        a(href=`${id}?side=${toggle.toLowerCase()}`)
          img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href='/cards/')
          img(src='/static/img/next.svg')
    script(src='/static/app.js')
